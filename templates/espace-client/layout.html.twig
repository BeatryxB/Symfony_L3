        </ul>
    </div>
{% endblock %}

{% block navbar_links %}
    <li><a class="nav-link active" href="{{ path('article_index')}}">Actualités</a></li>
    <li><a class="nav-link active" href="{{ path('user_home')}}">Utilisateur</a></li>
    <li><a class="nav-link active" href="{{ path('user_souscriptions')}}">Souscription</a></li>

